<Window x:Class="TetrisCubeDlxWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tetris Puzzle Cube Solver"
        Height="600"
        Width="600"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Viewport3D x:Name="Viewport3D">
            <Viewport3D.Camera>
                <PerspectiveCamera Position="-4.5,7,15" LookDirection="0.4,-0.3,-1" UpDirection="0,1,0" FieldOfView="20" />
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="CubeGroup">
                        <SpotLight Color="White" Position="2,2,15" Direction="0,0,-1" InnerConeAngle="8" OuterConeAngle="22" />
                        <SpotLight Color="White" Position="2,19,-2" Direction="0,-1,0" InnerConeAngle="8" OuterConeAngle="22" />
                        <SpotLight Color="White" Position="-15,2,-2" Direction="1,0,0" InnerConeAngle="8" OuterConeAngle="22" />
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>
    </Grid>
    
</Window>
